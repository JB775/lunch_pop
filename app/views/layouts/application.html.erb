<!DOCTYPE html>
<html>
<head>
  <title>LunchPop!</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1"> 
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  		<!-- FlipClock JS -->
	<script src="assets/flipclock.min.js"></script>
	<link href='https://fonts.googleapis.com/css?family=Raleway:100' rel='stylesheet' type='text/css'>
</head>
<body>

<div class="navbar">
	<ul>
		<li><%= link_to 'All Current Deals', '/'%></li>
		<% if session[:user_id] %>
			<% if User.where(id:session[:user_id]).first.lname=="placeholdlname"%>
				<li><%= link_to 'Preferences', edit_vendor_path(session[:user_id]) %></li>
				<li><%= link_to 'Post A Deal!', new_myproduct_path%></li>				
				<li><%= link_to 'My Deals', mydeals_path, 'data-no-turbolink' => true%></li>				
			<% else %>
				<li><%= link_to 'Preferences', edit_user_path(session[:user_id]) %></li>
			<% end %>
			<li><%= link_to 'Logout', mylogout_path%></li>
		<% else %>
			<!-- <li>original create customer acct was here</li> -->
			<li><%= link_to 'Create Business Account', new_vendor_path%></li>
			<span class="login-link"><li><%= link_to 'Login', mylogin_path%></li></span>
		<% end %>
	</ul>
</div>
<div class="yield">
	<%= yield %>
</div>
</body>
</html>
